@using SupportForSchoolActivities.Models.ViewModels;
@model OneSchoolClassVM
@{
    ViewData["Title"] = "ShowClass";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Учні</h2>
        </div>
        <div class="col-6 d-flex justify-content-between">
            <div></div>
            <div>
                <a asp-action="Upsert" asp-controller="Student" class="btn btn-primary">Додати нового учня</a>
            </div>
        </div>
    </div>
    <br /><br />
    @if (Model.Students.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                    <th>Клас</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td width="23%">@item.UserName</td>
                        <td width="23%">@item.FirstName</td>
                        <td width="23%">@item.LastName</td>
                        <td width="10%">
                            @if (@item.SchoolClass != null)
                            {
                                @item.SchoolClass.Name
                            }
                        </td>
                        <td width="21%" class="text-center">
                            <div class="w-75 btn-group text-center" role="group">
                                <a asp-action="Upsert" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-primary mx-2">Редагувати</a>
                                <a asp-action="Delete" asp-controller="Student" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Видалити</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Учнів немає</p>
    }
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 d-flex justify-content-between">
            <div></div>
            <div>
                <a asp-action="Delete" asp-route-id="@Model.SchoolClassId" class="btn btn-danger">Видалити клас</a>
            </div>
        </div>
    </div>
</div>
