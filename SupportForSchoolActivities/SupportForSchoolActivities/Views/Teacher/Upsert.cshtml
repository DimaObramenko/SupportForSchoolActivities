@using SupportForSchoolActivities.Models.RegisterModels;
@model TeacherVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Додавання нового вчителя</p>

                                <form class="mx-1 mx-md-4" asp-action="Upsert">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Teacher.FirstName" placeholder="Ім'я" class="form-control" />
                                            <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Teacher.LastName" placeholder="Прізвище" class="form-control" />
                                            <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <select asp-for="SelectedSubjectsIds" multiple data-placeholder="Обрати предмети" class="form-control">
                                            @foreach (var subject in Model.SubjectsSelectList)
                                            {
                                                <option value="@subject.Value">@subject.Text</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SelectedSubjectsIds" class="text-danger"></span>                                        
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Teacher.Email" placeholder="Email" class="form-control" />
                                            <span asp-validation-for="Teacher.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Teacher.Password" placeholder="Пароль" class="form-control" />
                                            <span asp-validation-for="Teacher.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Teacher.ConfirmPassword" placeholder="Повторіть пароль" class="form-control" />
                                            <span asp-validation-for="Teacher.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" value="Додати вчителя" class="btn btn-primary btn-lg" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('select').select2();
                });
            </script>
}

