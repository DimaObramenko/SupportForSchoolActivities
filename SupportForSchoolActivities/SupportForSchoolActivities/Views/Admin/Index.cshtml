@using SupportForSchoolActivities.Domain.Entity;
@model IEnumerable<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Адміністратори</h2>
        </div>
        <div class="col-6 d-flex justify-content-between">
            <div></div>
            <div>
                <a asp-action="Upsert" class="btn btn-primary">Створити нового адміністратора</a>
            </div>          
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.UserName</td>
                        <td width="30%">@item.FirstName</td>
                        <td width="30%">@item.LastName</td>
                        <td width="10%" class="text-center">
                            <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Видалити</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Адміністраторів немає</p>
    }
</div>